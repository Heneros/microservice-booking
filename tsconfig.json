{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noEmit": false,
    "noFallthroughCasesInSwitch": false,
    "types": [
      "express",
      "express-session",
      "jest",
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "libs/common/src/interfaces",
    ],
    "paths": {
      "@/app/common": [
        "libs/common/src"
      ],
      "@/app/common/*": [
        "libs/common/src/*"
      ],
      "@/api-gateway": [
        "apps/api-gateway/src"
      ],
      "@/api-gateway/*": [
        "apps/api-gateway/src/*"
      ],
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "test/**/*",
    "apps/**/*",
    "libs/**/*",
    "types"
  ],
}